{
  "name": "PeopleHistory",
  "description": "People History Modeling Tool",
  "author": "Gabor Vasko-Szedlar",
  "dependencies": {
    "connect": "3.1.*",
    "serve-static": "*"
  },
  "scripts": {
    "test": "karma start karma.conf.js",
    "test-single-run": "karma start karma.conf.js --single-run",
    "ci-test": "karma start karma.conf.js --single-run --browsers Firefox,PhantomJS",
    "ci-test-phantomjs": "karma start karma.conf.js --single-run --browsers PhantomJS",
    "ci-test-firefox": "karma start karma.conf.js --single-run --browsers Firefox",
    "ci-test-chrome": "karma start karma.conf.js --single-run --browsers Chrome",
    "e2e-test-chrome-local": "protractor protractor-chrome.conf.js --baseUrl=http://localhost:8080 --seleniumAddress=http://localhost:4444/wd/hub",
    "e2e-test-firefox-local": "protractor protractor-firefox.conf.js --baseUrl=http://localhost:8080 --seleniumAddress=http://localhost:4444/wd/hub",
    "e2e-test-chrome": "protractor protractor-chrome.conf.js",
    "e2e-test-firefox": "protractor protractor-firefox.conf.js"
  },
  "devDependencies": {
    "jasmine": "^2.5.2",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-jasmine": "^1.1.0",
    "karma-ng-html2js-preprocessor": "^1.0.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-spec-reporter": "0.0.26",
    "jasmine-reporters": "^2.0.0"
  }
}
